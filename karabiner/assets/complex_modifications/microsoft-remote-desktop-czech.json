{
  "title": "Microsoft Remote Desktop",
  "rules": [
    {
      "description": "Microsoft Remote Desktop - Czech Keyboard",
      "manipulators": [
        {
          "description": "Lazy left_option",
          "type": "basic",
          "from": { "key_code": "left_option" },
          "to": [ { "key_code": "left_option", "lazy": true } ],
          "conditions": [ { "type": "frontmost_application_if", "bundle_identifiers": [ "com\\.microsoft\\.rdc\\.macos" ] } ]
        },
        {
          "description": "Lazy right_option",
          "type": "basic",
          "from": { "key_code": "right_option" },
          "to": [ { "key_code": "right_option", "lazy": true } ],
          "conditions": [ { "type": "frontmost_application_if", "bundle_identifiers": [ "com\\.microsoft\\.rdc\\.macos" ] } ]
        },
        {
          "description": "<",
          "type": "basic",
          "from": { "key_code": "non_us_backslash" },
          "to": [ { "key_code": "comma", "modifiers": [ "right_option" ] } ],
          "conditions": [ { "type": "frontmost_application_if", "bundle_identifiers": [ "com\\.microsoft\\.rdc\\.macos" ] } ]
        },
        {
          "description": "Shift-< (>)",
          "type": "basic",
          "from": { "key_code": "non_us_backslash", "modifiers": { "mandatory": [ "shift" ] } },
          "to": [ { "key_code": "period",           "modifiers":                [ "right_option" ] } ],
          "conditions": [ { "type": "frontmost_application_if", "bundle_identifiers": [ "com\\.microsoft\\.rdc\\.macos" ] } ]
        },
        {
          "description": "Option-1 (`)",
          "type": "basic",
          "from": { "key_code": "1",  "modifiers": { "mandatory": [ "option" ] } },
          "to": [
            { "key_code": "keypad_9", "modifiers":                [ "left_option" ] },
            { "key_code": "keypad_6", "modifiers":                [ "left_option" ] },
            { "key_code": "left_option", "halt": true }
          ],
          "conditions": [ { "type": "frontmost_application_if", "bundle_identifiers": [ "com\\.microsoft\\.rdc\\.macos" ] } ]
        },
        {
          "description": "Option-2 (@)",
          "type": "basic",
          "from": { "key_code": "2", "modifiers": { "mandatory": [ "option" ] } },
          "to": [ { "key_code": "v", "modifiers":                [ "right_option" ] } ],
          "conditions": [ { "type": "frontmost_application_if", "bundle_identifiers": [ "com\\.microsoft\\.rdc\\.macos" ] } ]
        },
        {
          "description": "Option-3 (#)",
          "type": "basic",
          "from": { "key_code": "3", "modifiers": { "mandatory": [ "option" ] } },
          "to": [ { "key_code": "x", "modifiers":                [ "right_option" ] } ],
          "conditions": [ { "type": "frontmost_application_if", "bundle_identifiers": [ "com\\.microsoft\\.rdc\\.macos" ] } ]
        },
        {
          "description": "Option-4 ($)",
          "type": "basic",
          "from": { "key_code": "4",         "modifiers": { "mandatory": [ "option" ] } },
          "to": [ { "key_code": "semicolon", "modifiers":                [ "right_option" ] } ],
          "conditions": [ { "type": "frontmost_application_if", "bundle_identifiers": [ "com\\.microsoft\\.rdc\\.macos" ] } ]
        },
        {
          "description": "Option-5 (~)",
          "type": "basic",
          "from": { "key_code": "5", "modifiers": { "mandatory": [ "option" ] } },
          "to": [ { "key_code": "1", "modifiers":                [ "right_option" ] } ],
          "conditions": [ { "type": "frontmost_application_if", "bundle_identifiers": [ "com\\.microsoft\\.rdc\\.macos" ] } ]
        },
        {
          "description": "Option-6 (^)",
          "type": "basic",
          "from": { "key_code": "6", "modifiers": { "mandatory": [ "option" ] } },
          "to": [
            { "key_code": "keypad_9", "modifiers":               [ "left_option" ] },
            { "key_code": "keypad_4", "modifiers":               [ "left_option" ] },
            { "key_code": "left_option", "halt": true }
          ],
          "conditions": [ { "type": "frontmost_application_if", "bundle_identifiers": [ "com\\.microsoft\\.rdc\\.macos" ] } ]
        },
        {
          "description": "Option-7 (&)",
          "type": "basic",
          "from": { "key_code": "7", "modifiers": { "mandatory": [ "option" ] } },
          "to": [ { "key_code": "c", "modifiers":                [ "right_option" ] } ],
          "conditions": [ { "type": "frontmost_application_if", "bundle_identifiers": [ "com\\.microsoft\\.rdc\\.macos" ] } ]
        },
        {
          "description": "Option-8 (*)",
          "type": "basic",
          "from": { "key_code": "8",     "modifiers": { "mandatory": [ "option" ] } },
          "to": [ { "key_code": "slash", "modifiers":                [ "right_option" ] } ],
          "conditions": [ { "type": "frontmost_application_if", "bundle_identifiers": [ "com\\.microsoft\\.rdc\\.macos" ] } ]
        },
        {
          "description": "Option-9 ({)",
          "type": "basic",
          "from": { "key_code": "9", "modifiers": { "mandatory": [ "option" ] } },
          "to": [ { "key_code": "b", "modifiers":                [ "right_option" ] } ],
          "conditions": [ { "type": "frontmost_application_if", "bundle_identifiers": [ "com\\.microsoft\\.rdc\\.macos" ] } ]
        },
        {
          "description": "Option-0 (})",
          "type": "basic",
          "from": { "key_code": "0", "modifiers": { "mandatory": [ "option" ] } },
          "to": [ { "key_code": "n", "modifiers":                [ "right_option" ] } ],
          "conditions": [ { "type": "frontmost_application_if", "bundle_identifiers": [ "com\\.microsoft\\.rdc\\.macos" ] } ]
        },
        {
          "description": "Option-ú ([)",
          "type": "basic",
          "from": { "key_code": "open_bracket", "modifiers": { "mandatory": [ "option" ] } },
          "to": [ { "key_code": "f",            "modifiers":                [ "right_option" ] } ],
          "conditions": [ { "type": "frontmost_application_if", "bundle_identifiers": [ "com\\.microsoft\\.rdc\\.macos" ] } ]
        },
        {
          "description": "Option-) (])",
          "type": "basic",
          "from": { "key_code": "close_bracket", "modifiers": { "mandatory": [ "option" ] } },
          "to": [ { "key_code": "g",             "modifiers":                [ "right_option" ] } ],
          "conditions": [ { "type": "frontmost_application_if", "bundle_identifiers": [ "com\\.microsoft\\.rdc\\.macos" ] } ]
        },
        {
          "description": "Option-ů (;)",
          "type": "basic",
          "from": { "key_code": "semicolon",              "modifiers": { "mandatory": [ "option" ] } },
          "to": [ { "key_code": "grave_accent_and_tilde", "modifiers":                [] } ],
          "conditions": [ { "type": "frontmost_application_if", "bundle_identifiers": [ "com\\.microsoft\\.rdc\\.macos" ] } ]
        },
        {
          "description": "Option-§ (')",
          "type": "basic",
          "from": { "key_code": "quote", "modifiers": { "mandatory": [ "option" ] } },
          "to": [
            { "key_code": "keypad_3",    "modifiers":                [ "left_option" ] },
            { "key_code": "keypad_9",    "modifiers":                [ "left_option" ] },
            { "key_code": "left_option", "halt": true }
          ],
          "conditions": [ { "type": "frontmost_application_if", "bundle_identifiers": [ "com\\.microsoft\\.rdc\\.macos" ] } ]
        },
        {
          "description": "Shift-¨ (`)",
          "type": "basic",
          "from": { "key_code": "backslash", "modifiers": { "mandatory": [ "shift" ] } },
          "to": [
            { "key_code": "keypad_9",        "modifiers":                [ "left_option" ] },
            { "key_code": "keypad_6",        "modifiers":                [ "left_option" ] },
            { "key_code": "left_option", "halt": true }
          ],
          "conditions": [ { "type": "frontmost_application_if", "bundle_identifiers": [ "com\\.microsoft\\.rdc\\.macos" ] } ]
        },
        {
          "description": "Option-, (<)",
          "type": "basic",
          "from": { "key_code": "comma", "modifiers": { "mandatory": [ "option" ] } },
          "to": [ { "key_code": "comma", "modifiers":                [ "right_option" ] } ],
          "conditions": [ { "type": "frontmost_application_if", "bundle_identifiers": [ "com\\.microsoft\\.rdc\\.macos" ] } ]
        },
        {
          "description": "Option-. (>)",
          "type": "basic",
          "from": { "key_code": "period", "modifiers": { "mandatory": [ "option" ] } },
          "to": [ { "key_code": "period", "modifiers":                [ "right_option" ] } ],
          "conditions": [ { "type": "frontmost_application_if", "bundle_identifiers": [ "com\\.microsoft\\.rdc\\.macos" ] } ]
        },
        {
          "description": "\\",
          "type": "basic",
          "from": { "key_code": "grave_accent_and_tilde", "modifiers": { "mandatory": [] } },
          "to": [ { "key_code": "non_us_backslash" } ],
          "conditions": [ { "type": "frontmost_application_if", "bundle_identifiers": [ "com\\.microsoft\\.rdc\\.macos" ] } ]
        },
        {
          "description": "Shift-\\ (|)",
          "type": "basic",
          "from": { "key_code": "grave_accent_and_tilde", "modifiers": { "mandatory": [ "shift" ] } },
          "to": [ { "key_code": "non_us_backslash",       "modifiers":                [ "left_shift" ] } ],
          "conditions": [ { "type": "frontmost_application_if", "bundle_identifiers": [ "com\\.microsoft\\.rdc\\.macos" ] } ]
        },
        {
          "description": "Option-Shift-C (©)",
          "type": "basic",
          "from": { "key_code": "c",  "modifiers": { "mandatory": [ "option", "shift" ] } },
          "to": [
            { "key_code": "keypad_0", "modifiers":                [ "left_option" ] },
            { "key_code": "keypad_1", "modifiers":                [ "left_option" ] },
            { "key_code": "keypad_6", "modifiers":                [ "left_option" ] },
            { "key_code": "keypad_9", "modifiers":                [ "left_option" ] },
            { "key_code": "left_option", "halt": true }
          ],
          "conditions": [ { "type": "frontmost_application_if", "bundle_identifiers": [ "com\\.microsoft\\.rdc\\.macos" ] } ]
        },
        {
          "description": "Option-Shift-R (®)",
          "type": "basic",
          "from": { "key_code": "r",  "modifiers": { "mandatory": [ "option", "shift" ] } },
          "to": [
            { "key_code": "keypad_0", "modifiers":                [ "left_option" ] },
            { "key_code": "keypad_1", "modifiers":                [ "left_option" ] },
            { "key_code": "keypad_7", "modifiers":                [ "left_option" ] },
            { "key_code": "keypad_4", "modifiers":                [ "left_option" ] },
            { "key_code": "left_option", "halt": true }
          ],
          "conditions": [ { "type": "frontmost_application_if", "bundle_identifiers": [ "com\\.microsoft\\.rdc\\.macos" ] } ]
        },
        {
          "description": "Option-Shift-T (™)",
          "type": "basic",
          "from": { "key_code": "c",  "modifiers": { "mandatory": [ "option", "shift" ] } },
          "to": [
            { "key_code": "keypad_0", "modifiers":                [ "left_option" ] },
            { "key_code": "keypad_1", "modifiers":                [ "left_option" ] },
            { "key_code": "keypad_5", "modifiers":                [ "left_option" ] },
            { "key_code": "keypad_3", "modifiers":                [ "left_option" ] },
            { "key_code": "left_option", "halt": true }
          ],
          "conditions": [ { "type": "frontmost_application_if", "bundle_identifiers": [ "com\\.microsoft\\.rdc\\.macos" ] } ]
        }
      ]
    }
  ]
}
